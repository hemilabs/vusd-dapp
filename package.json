{
  "name": "vusd-dapp",
  "version": "1.0.0",
  "license": "MIT",
  "author": {
    "name": "Gabriel Montes",
    "email": "gabriel@bloq.com"
  },
  "contributors": [
    "Martin Bon Foster <martin.bonfoster@bloq.com>",
    "leo <leo@bloq.com>",
    "Gonzalo D'Elia <gonzalo@bloq.com>",
    "Maxi <maximo@bloq.com>"
  ],
  "scripts": {
    "lerna": "lerna",
    "deps:check": "lerna run --stream deps:check",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint --cache --quiet .",
    "lint:fix": "eslint --cache --fix .",
    "postinstall": "lerna bootstrap",
    "test": "lerna run --stream test"
  },
  "devDependencies": {
    "@truffle/hdwallet-provider": "^1.4.0",
    "@types/chai": "^4.2.12",
    "@types/mocha": "^8.0.3",
    "chai": "^4.3.4",
    "chai-subset": "^1.6.0",
    "dependency-check": "^4.1.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.21.0",
    "eslint-config-bloq": "^4.6.1",
    "husky": "^4.3.8",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "mocha": "^8.4.0",
    "next": "^11.0.1",
    "nyc": "^15.1.0",
    "precinct": "^8.1.0",
    "prettier": "^2.3.1",
    "prettier-plugin-tailwind": "^2.2.12",
    "tailwindcss": "^2.2.7",
    "web3": "~1.3.6"
  },
  "eslintConfig": {
    "extends": [
      "bloq",
      "prettier"
    ],
    "ignorePatterns": [
      "site/out",
      "dashboard/out"
    ],
    "overrides": [
      {
        "files": [
          "packages/**/*.js"
        ],
        "extends": [
          "bloq/node",
          "prettier"
        ],
        "rules": {
          "new-cap": [
            "warn",
            {
              "capIsNewExceptions": [
                "VERSION"
              ]
            }
          ]
        }
      },
      {
        "files": [
          "*.spec.js"
        ],
        "extends": [
          "bloq/mocha",
          "prettier"
        ]
      },
      {
        "files": [
          "site/**/*.js",
          "dashboard/**/*.js"
        ],
        "extends": [
          "bloq/next",
          "prettier"
        ]
      },
      {
        "files": [
          "dashboard/**/*.js"
        ],
        "rules": {
          "@next/next/no-html-link-for-pages": [
            "warn",
            "dashboard/pages"
          ]
        }
      },
      {
        "files": [
          "site/**/*.js"
        ],
        "rules": {
          "@next/next/no-html-link-for-pages": [
            "warn",
            "site/pages"
          ]
        }
      }
    ],
    "rules": {
      "promise/no-nesting": "off"
    },
    "settings": {
      "node": {
        "allowModules": [
          "@truffle/hdwallet-provider",
          "chai-subset",
          "chai",
          "dotenv",
          "web3"
        ]
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run deps:check && npm run test"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{css,js,json,md}": "prettier --write"
  },
  "prettier": {
    "arrowParens": "avoid",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none"
  }
}
