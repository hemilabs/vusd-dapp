{
  "name": "vusd-dapp",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Gabriel Montes",
  "scripts": {
    "lerna": "lerna",
    "deps:check": "lerna run --stream deps:check",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint --cache .",
    "lint:fix": "eslint --cache --fix .",
    "postinstall": "lerna bootstrap",
    "test": "lerna run --stream test"
  },
  "devDependencies": {
    "@truffle/hdwallet-provider": "^1.4.0",
    "@types/chai": "^4.2.12",
    "@types/mocha": "^8.0.3",
    "chai": "^4.3.4",
    "chai-subset": "^1.6.0",
    "dependency-check": "^4.1.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-tailwind": "^0.2.1",
    "husky": "^4.3.8",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "mocha": "^8.4.0",
    "nyc": "^15.1.0",
    "precinct": "^8.1.0",
    "prettier": "^2.2.1",
    "web3": "^1.3.6"
  },
  "engines": {
    "node": "14"
  },
  "eslintConfig": {
    "env": {
      "es2017": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "ignorePatterns": [
      "site/out"
    ],
    "overrides": [
      {
        "files": [
          "*.spec.js"
        ],
        "env": {
          "mocha": true
        }
      },
      {
        "files": [
          "site/**/*.js",
          "dashboard/**/*.js"
        ],
        "env": {
          "browser": true,
          "es2020": true
        },
        "extends": [
          "eslint:recommended",
          "plugin:react/recommended",
          "plugin:tailwind/recommended",
          "prettier"
        ],
        "parserOptions": {
          "ecmaFeatures": {
            "jsx": true
          },
          "sourceType": "module"
        },
        "rules": {
          "react/prop-types": "off",
          "react/react-in-jsx-scope": "off",
          "react/jsx-sort-props": "warn"
        },
        "settings": {
          "react": {
            "version": "17.0"
          }
        }
      }
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "no-shadow": "warn",
      "no-use-before-define": "error"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run deps:check && npm run test"
    }
  },
  "lint-staged": {
    "*.js": "npm run lint:fix",
    "*.{css,js,json,md}": "npm run format"
  },
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.js"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none"
  }
}
